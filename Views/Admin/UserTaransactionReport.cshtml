
@{
    ViewData["Title"] = "UserTaransactionReport";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@*<h1>UserTaransactionReport</h1>*@

@model DataTable
@using System.Data

<div class="col-md-12">
    <div class="card card-warning ">
        <div class="card-header">
            <h3 class="card-title new-title"> Transaction Report</h3>
        </div>

        <form method="post" action="/admin/UserTaransactionReport">


            <div class="card-body">




                <div class="row">


                    <div class="col-sm-4" style="display:none">
                        <div id="innerblock">
                            <label>Partner</label>
                            @Html.DropDownList("PartnerID", ViewBag.Partner, "Select Partner", new { @class = "form-control"})
                            @*<select class="form-control" id="ddlblock"><option>Select Block</option></select>
                            *@
                        </div>
                    </div>

                    <div class="col-sm-4">

                        <div class="form-group">
                            <label>FormDate</label>
                            <input type="date" class="form-control" name="FormDate" />
                        </div>
                    </div>

                    <div class="col-sm-4">

                        <div class="form-group">
                            <label>ToDate</label>
                            <input type="date" class="form-control" name="ToDate" />
                        </div>
                    </div>

                    <div class="col-sm-4" style="margin-top: 27px;">

                        <div class="form-group">
                            <input type="submit" value="Search" class="btn btn-primary " />
                        </div>
                    </div>

                </div>
                <div style="overflow-x:auto;" class="p-0">
                    <table id="example3" class="my  table table-bordered table-hover " style="width:100%;">
                        <thead class="bg-primary">
                            <tr>
                                @*<th>Sr.No.</th>*@
                                <th>Partner ID</th>
                                <th>Beneficiary Name </th>
                                <th>Mobile No</th>
                                <th>Transaction Amount</th>
                                <th>Transaction Type </th>
                                <th>TransactionID </th>
                                @*<th>CreatedDate</th>*@
                                <th>Transaction Date</th>
                                <th>UTR</th>
                                <th>Status</th>
                                <th>Acount No</th>
                                <th>Customer Charges</th>
                                <th>Commission Amount</th>
                                <th>TDS</th>
                                <th>Amount Deducted</th>
                                @*<th>Pipe</th>
                                <th>Pincode</th>
                                <th>Address</th>
                                <th>DOB</th>
                                <th>Txntype </th>

                                <th>Remark</th>*@

                            </tr>

                        </thead>
                        <tbody>
                            @{

                                if (Model != null)
                                {
                                    if (Model.Rows.Count > 0)
                                    {
                                        int i = 1;
                                        foreach (DataRow item in Model.Rows)
                                        {
                                            <tr>
                                                @*<td>@i</td>*@
                                                <td>@item["Partner_ID"]</td>
                                                <td>@item["Benename"]</td>
                                                <td>@item["MobileNo"]</td>
                                                <td>@item["Amount"]</td>
                                                <td>@item["Txntype"]</td>
                                                <td>@item["ReferenceId"]</td>
                                                <td>@item["CreatedDate"]</td>
                                                <td>@item["utr"]</td>

                                                @if (item["txn_status"].ToString().ToLower() == "true")
                                                {
                                                    <td style="color:white ;"><span style="background-color:forestgreen;" class="rounded">success</span></td>
                                                }
                                                else
                                                {
                                                    <td style="color:white"><span style="background-color:red; " class="rounded">Failed</span></td>
                                                }

                                                <td>@item["account_number"]</td>
                                                @*<td>@item["Pipe"]</td>
                                <td>@item["Pincode"]</td>
                                <td width="120px">@item["Address"]</td>
                                <td>@item["Dob"]</td>
                                <td>@item["Txntype"]</td>


                                <td>@item["Message"]</td>*@


                                                @* <td>
                                <a href="#" onclick="GetDetailsForEdit('@item["RecruitmentID"]')"><span class="badge bg-success">Edit</span></a>
                                </td>
                                *@
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>

                                            </tr>
                                            i++;
                                        }
                                    }

                                }

                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </form>
    </div>
</div>

<script>
    var js = jQuery.noConflict(true)
    js(document).ready(function () {

        js("#example3").DataTable();
    })





</script>
